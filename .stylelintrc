{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "string-quotes": "single",
    "max-nesting-depth": 5,
    "selector-max-id": 1,
    "selector-class-pattern": null,
    "no-invalid-position-at-import-rule": null,
    }
}
